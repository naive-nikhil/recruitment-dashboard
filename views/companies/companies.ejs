<div class="container-header">
  <div class="container-header__info">
    <h3>Companies [<%=companies.length%>]</h3>
    <i class="fa-solid fa-plus" onclick="addCompanyForm()"></i>
  </div>
</div>

<div class="data-list">
  <% if (companies.length === 0) { %>
  <div class="no-data">No companies available.</div>
  <% } else { %> <% for (let company of companies) { %>
  <div class="company" data-company-id="<%=company._id%>">
    <div class="details">
      <h1><%=company.companyName%></h1>
      <h3><%=company.industry%></h3>
      <h2><%=company.contactPersonName%></h2>
      <h3><i class="fa-solid fa-phone"></i><%=company.contactPersonPhone%></h3>
      <h3>
        <i class="fa-solid fa-envelope"></i><%=company.contactPersonEmail%>
      </h3>
    </div>
    <div class="options">
      <div class="menu-container">
        <i
          class="fa-solid fa-ellipsis-vertical job-option"
          data-id="<%=company._id%>"></i>
        <div class="menu" id="<%=company._id%>">
          <h4 class="menu-item">Edit</h4>
          <form class="menu-item" action="" method="POST">
            <button type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% } %> <% } %>
</div>
